<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottomScreen">

    <ImageView
        android:id="@+id/fragment_findtheword_imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:padding="7dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_findtheword_textView_top_left"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.50"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/fragment_findtheword_textView_bottom_left"
        app:layout_constraintEnd_toStartOf="@id/fragment_findtheword_textView_top_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_findtheword_imageView" />

    <TextView
        android:id="@+id/fragment_findtheword_textView_top_right"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.50"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_findtheword_textView_bottom_right"
        app:layout_constraintEnd_toStartOf="@id/fragment_findtheword_textView_top_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_findtheword_imageView" />

    <TextView
        android:gravity="center"
        android:id="@+id/fragment_findtheword_textView_bottom_left"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.50"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_findtheword_textView_bottom_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_findtheword_textView_top_left" />

    <TextView
        android:gravity="center"
        android:id="@+id/fragment_findtheword_textView_bottom_right"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.50"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_findtheword_textView_bottom_left"
        app:layout_constraintTop_toBottomOf="@id/fragment_findtheword_textView_top_right" />

</androidx.constraintlayout.widget.ConstraintLayout>
